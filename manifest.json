{
  "manifest_version": 3,
  "name": "PumpSpeak",
  "version": "1.0.2",
  "description": "Voice chat for pump.fun token holders",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://pump.fun/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://pump.fun/*"],
      "js": ["config.js", "content.js"],
      "css": ["widget.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "widget.css"],
      "matches": ["https://pump.fun/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}